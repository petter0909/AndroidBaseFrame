<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/page_background_color</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="ColorTranslucentTheme" parent="AppTheme"></style>

    <style name="MainAppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/logo_splash</item>
    </style>

</resources>
